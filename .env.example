# ******************** prisma ********************
# 必填
DATABASE_URL="postgresql://username:password@localhost:5432/acnavs"
# ******************** prisma END ********************

# ******************** 网站 ********************
# 网站的预览地址（根据实际情况设置），站点地图的生成也是用这个当做域名前缀
# 必填
SITE_URL="http://localhost:6121"
# ******************** 网站 END********************

# ******************** next-auth ********************
# 必填
AUTH_SECRET="your-next-auth-secret"

# 邮箱服务配置 (SMTP)
# 必填
EMAIL_SERVER_HOST="postal.example.com"
EMAIL_SERVER_PORT="25"
EMAIL_SERVER_USER="your-email-username"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@example.com"
# ******************** next-auth END ********************

# ******************** ADMIN ********************
# ADMIN 邮箱列表，多个邮箱用英文逗号分隔开（不要加空格）
# 因为这个变量客户端也可能访问，所以必须以NEXT_PUBLIC_开头
# 必填
NEXT_PUBLIC_ADMIN_EMAILS="admin@example.com"
# ******************** ADMIN END ********************

# ******************** umami配置（不使用umami时忽略这部分配置） ********************
# umami js 文件地址
NEXT_PUBLIC_UMAMI_URL="umami-js-src"
# umami 需要统计的website id
NEXT_PUBLIC_UMAMI_WEBSIT_ID="umami-website-id"
# ******************** umami配置 END ********************

# ******************** S3 Storage Configuration ********************
# S3 存储配置（支持 AWS S3 和 Cloudflare R2）
# 必填
AWS_REGION="auto"
AWS_ACCESS_KEY_ID="your-s3-access-key-id"
AWS_SECRET_ACCESS_KEY="your-s3-secret-access-key"
AWS_S3_BUCKET_NAME="your-bucket-name"
AWS_S3_ENDPOINT="https://your-endpoint.com"

# 公共访问URL（CDN域名或直接访问域名）
# 必填
NEXT_PUBLIC_S3_STORAGE_URL="https://your-cdn-domain.com"
# ******************** S3 Storage Configuration END ********************

# ******************** Prisma ********************
# Prisma
PRISMA_FIELD_ENCRYPTION_KEY="your-prisma-encryption-key"
PRISMA_GENERATE_SKIP_POSTINSTALL_WARNING=true
# ******************** Prisma END ********************
